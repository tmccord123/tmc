                <li>
                    @Html.ActionLink("Home", "Index", "Home")
                </li>
                <li class="active">Coupon Board</li>
            </ol>
        </div>
    </div>
    @{
        foreach (var blogItem in Model.Products  )
        {
            @Html.Partial("_ProductView", blogItem)
        }
        }
    
